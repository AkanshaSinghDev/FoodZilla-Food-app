<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.loginandsignup.Splash"
    >

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:fontFamily="cursive"
        android:text="Welcome To"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold|italic" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="1000dp"
        android:layout_height="100dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:layout_marginTop="18dp"
        android:src="@drawable/foodzilla_gray" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="18dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gif2" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/taco"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_alignTop="@+id/gifImageView"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/taco" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/bgif"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:scaleType="centerCrop"
        android:src="@drawable/burgergif" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/dessertgif"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/taco"
        android:layout_marginEnd="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dessertgif" />





</RelativeLayout>
